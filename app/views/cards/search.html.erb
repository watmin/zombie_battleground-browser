<script>
  $(document).ready(function() {
    // make the rows clickable
    $(".clickable-thumbnail").mouseup(function(event) {
      switch(event.which) {
        case 1: // left mouse
          window.location = $(this).data("href");
          break;
        case 2: // middle mouse
          window.open($(this).data("href"));
          break;
        case 3: // right mouse
          break;
      }
    });

    // hover over flavor text
    $(function () {
      $('[data-toggle="tooltip"]').tooltip();
    })

    // make the table sortable
    $('#searchResults').DataTable({
      order: [[9, 'asc']],
      stateSave: true,
      responsive: true,
      dom: "<'row'<'col-sm-3'l><'col-sm-3'f><'col-sm-6'p>><'row'<'col-sm-12'tr>><'row'<'col-sm-5'i><'col-sm-7'p>>"
    });
  });
</script>

</br>
<table id="searchResults" class="table table-striped table-hover table-responsive dt-responsive display nowrap">
  <caption>
  <% if @filter == 'all' %>
    All cards
  <% elsif @criteria.nil? %>
    Found cards matching: <%= @normalized_terms.map(&:to_s) %>
  <% else %>
    Found cards for: <%= @criteria %>
  <% end %>
  </caption>
  <thead>
    <tr>
      <th>View</th>
      <th>Name</th>
      <th>Set</th>
      <th>Kind</th>
      <th>Type</th>
      <th>Rank</th>
      <th>Cost</th>
      <th>Health</th>
      <th>Damage</th>
      <th>Mould ID</th>
      <th>Version</th>
    </tr>
  </thead>
  <tbody>
  <% @found.each do |found| %>
  <tr>
    <td>
      <img
        class="clickable-thumbnail img-thumbnail"
        style="cursor: pointer;"
        data-href="/cards/show/<%= found.mould_id %>/<%= found.version %>"
        src="<%= found.image_url %>"
        data-toggle="tooltip"
        data-placement="right"
        title="<%= found.flavor_text %>"
      >
    </td>
    <td><%= found.name %></td>
    <td><%= found.set %></td>
    <td><%= found.kind %></td>
    <td><%= found.type %></td>
    <td><%= found.rank %></td>
    <td><%= found.cost %></td>
    <td><%= found.health %></td>
    <td><%= found.damage %></td>
    <td><%= found.mould_id %></td>
    <td><%= found.version %></td>
  </tr>
  <% end %>
  </tbody>
</table>
