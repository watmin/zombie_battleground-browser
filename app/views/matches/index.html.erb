<h1 class="text-center">Recent Matches</h1>
<div class="row">
<% @matches.each do |match| %>
  <div class="col-sm-4 py-2">
    <div class="card">
      <div class="card card-body h-100">
        <h5 class="card-title">Match ID <%= match.id %></h5>
        <p class=card-text">Status: <%= match.status %></p>
        <p class=card-text">Updated at: <%= match.updated_at %></p>
        <a href="/matches/show/<%= match.id %>" class="btn btn-primary">Match Details</a>
        <p>
        <div>
          <a href="/decks/show/player/<%= match.player1_id %>/deck/<%= match.player1_deck_id %>" class="btn btn-primary">Player 1 Deck</a>
          <a href="/decks/show/player/<%= match.player2_id %>/deck/<%= match.player2_deck_id %>" class="btn btn-primary float-right">Player 2 Deck</a>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
